{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDirs": ["./src", "./test"],
    "strict": true,
    "target": "es6",
    "types": ["node"],
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "exclude": ["build", "node_modules"],
  "include": ["src"]
}
